<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:LagoVista.Simulator"
             x:Class="LagoVista.Simulator.MainPage" BackgroundColor="Blue">

    <StackLayout WidthRequest="300" HorizontalOptions="Center" BackgroundColor="White">
        <Label Text="Email"  />
        <Entry  x:Name="EmailAddress" />
        <Label Text="Password" />
        <Entry x:Name="Password" />
        <Button Clicked="Button_Clicked" Text="Login" />
    </StackLayout>
    
</ContentPage>