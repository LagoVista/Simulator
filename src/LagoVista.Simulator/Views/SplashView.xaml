<?xml version="1.0" encoding="utf-8" ?>
<pge:LagoVistaContentPage     
    xmlns:pge="clr-namespace:LagoVista.XPlat.Core;assembly=LagoVista.XPlat.Core"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="LagoVista.Simulator.Views.SplashView"
    xmlns:trs="clr-namespace:LagoVista.Simulator;assembly=LagoVista.Simulator"
    Title="Welcome - IoT Simulator">
    <pge:LagoVistaContentPage.ToolbarItems>
        <ToolbarItem Text="Login" Command="{Binding LoginCommand}" />
    </pge:LagoVistaContentPage.ToolbarItems>

    <pge:LagoVistaContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <Image Source="splashbg.jpg" Aspect="AspectFill" Grid.RowSpan="2" />
            <pge:Button Command="{Binding LoginCommand}" Text="{trs:Translate Common_Login}" WidthRequest="200" Grid.Row="1" HeightRequest="64" Margin="20" HorizontalOptions="Center" />
        </Grid>
    </pge:LagoVistaContentPage.Content>
</pge:LagoVistaContentPage>