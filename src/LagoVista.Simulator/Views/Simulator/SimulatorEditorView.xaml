      xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
      xmlns:ctls="clr-namespace:LagoVista.Simulator.Controls"
      x:Class="LagoVista.Simulator.Views.Simulator.SimulatorEditorView"
      Title="Simulator Editor">

    <pge:LagoVistaContentPage.ToolbarItems>
